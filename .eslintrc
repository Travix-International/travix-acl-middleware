{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "rules": {
    "arrow-body-style": 0, // 1
    "comma-dangle": 0,
    "computed-property-spacing": [2, "never"],
    "consistent-return": 2,
    "indent": 2,
    "max-len": [0, 120, 4, { "ignoreUrls": true }], // 1
    "new-cap": [2, {"capIsNewExceptions": ["Alt", "Immutable", "ImmutableStore", "List", "Map"]}],
    "no-case-declarations": 0,
    "no-nested-ternary": 2,
    "no-whitespace-before-property": 2,
    "no-param-reassign": 0, // 1
    "no-unneeded-ternary": 2,
    "no-unused-expressions": [2, { allowShortCircuit: true, allowTernary: true }],
    "no-useless-constructor": 0, // 1
    "object-shorthand": 0,
    "operator-linebreak": [1, "after", { "overrides": { "?": "before", ":": "before", "&&": "ignore", "||": "ignore", "=": "ignore", "+": "ignore"} }],
    "prefer-arrow-callback": 0, // 1
    "prefer-const": 0, // 1
    "prefer-template": 0, // 1
    "quotes": 0, // 1
    "quote-props": [0, "consistent"], // 1
    "space-in-parens": [2, "never"],
    "strict": 0
  }
}
